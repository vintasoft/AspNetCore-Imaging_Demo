@{
    ViewBag.Title = "VintaSoft Imaging Demo (ASP.NET Core)";
    Layout = "~/Views/Shared/_DemoViewLayout.cshtml";
}

@section demoDescription{
    <h1>VintaSoft Imaging Demo (ASP.NET Core)</h1>
}

@section requiredScripts{
    <link href="@Url.Content("~/lib/Vintasoft/Vintasoft.Imaging.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/Vintasoft/Vintasoft.Imaging.DocumentViewer.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/bootstrap-colorpicker/bootstrap-colorpicker.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/bootstrap-multiselect/bootstrap-multiselect.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/ImagingDemo.css")" rel="stylesheet" />

    <script src="@Url.Content("~/lib/bootstrap-colorpicker/bootstrap-colorpicker.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/bootstrap-multiselect/bootstrap-multiselect.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/lib/Vintasoft/Vintasoft.Shared.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/Vintasoft/Vintasoft.Imaging.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/Vintasoft/Vintasoft.Imaging.Dialogs.Bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/Vintasoft/Vintasoft.Imaging.DocCleanup.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/Vintasoft/Vintasoft.Imaging.DocumentViewer.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/lib/Vintasoft/Vintasoft.Imaging.DocumentViewer.Dialogs.Bootstrap.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/js/UI/Controls/PropertyGridControl.Bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/UI/Dialogs/ImageProcessingCommandSettingsDialog.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/UI/Dialogs/ImageProcessingCommandResultDialog.js")" type="text/javascript"></script>
}

@section demoContent{
    <div id="documentViewerContainer"></div>

    @Html.Partial("UI/Dialogs/BlockUiDialog")
    @Html.Partial("UI/Dialogs/PreviouslyUploadedFilesDialog")
    @Html.Partial("UI/Dialogs/ImageProcessingCommandSettingsDialog")
    @Html.Partial("UI/Dialogs/ImageProcessingCommandResultDialog")

    <script src="@Url.Content("~/js/OpenFileHelper.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/ImageProcessingUiHelper.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/CustomImageRotationHelper.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/ImagingDemo.js")" type="text/javascript"></script>
}
